<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>PointsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/kendo.all.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/kendo.all.min.js"></script>
    <script src="~/js/konva.min.js"></script>
    <script src="~/js/main.js"></script>
</head>
<body>

<div class="container">
    <h3 class="mt-3">Точки и комментарии</h3>

    <div class="row g-2 align-items-center mb-3">
        <div class="col-auto">
            <label for="point-radius" class="col-form-label">Радиус:</label>
        </div>
        <div class="col-auto">
            <input type="number" id="point-radius" class="form-control" min="1" max="100" value="20">
        </div>
        
        <div class="col-auto">
            <label for="point-color" class="col-form-label">Цвет:</label>
        </div>
        <div class="col-auto">
            <input type="color" id="point-color" class="form-control form-control-color" value="#000000">
        </div>

        <div class="col-auto">
            <button id="add-point" class="btn btn-primary">Добавить точку</button>
        </div>

        <div class="col-auto">
            <button id="delete-all-points" class="btn btn-danger">Очистить поле</button>
        </div>
    </div>
    
    <div id="container"></div>
</div>

<div id="edit-point-form">
    <div class="mb-2">
        <label for="edit-point-radius">Радиус:</label>
        <input type="number" id="edit-point-radius" class="form-control" min="1" max="100">
    </div>
    <div class="mb-2">
        <label for="edit-point-color">Цвет:</label>
        <input type="color" id="edit-point-color" class="form-control form-control-color">
    </div>
    <div class="mb-2 d-flex gap-2">
        <button id="save-point-edit" class="btn btn-sm btn-success w-50">Сохранить</button>
        <button id="cancel-point-edit" class="btn btn-sm btn-secondary w-50">Отмена</button>
    </div>

    <hr class="my-2">

    <button id="show-comment-form" class="btn btn-sm btn-outline-primary w-100 mb-2">Добавить комментарий</button>

    <div id="comment-form" style="display: none;">
        <div class="mb-2">
            <label for="comment-text">Текст:</label>
            <textarea type="text" id="comment-text" class="form-control" rows="2"></textarea>
        </div>
        <div class="mb-2">
            <label for="comment-color">Цвет фона:</label>
            <input type="color" id="comment-color" class="form-control form-control-color" value="#ffffff">
        </div>
        <div class="d-flex gap-2">
            <button id="add-comment" class="btn btn-sm btn-primary w-50">Добавить</button>
            <button id="cancel-comment" class="btn btn-sm btn-secondary w-50">Отмена</button>
        </div>
    </div>
</div>

<div id="edit-comment-form">
    <div class="mb-2">
        <label for="edit-comment-text">Текст:</label>
        <textarea id="edit-comment-text" class="form-control" rows="2"></textarea>
    </div>
    <div class="mb-2">
        <label for="edit-comment-color">Цвет фона:</label>
        <input type="color" id="edit-comment-color" class="form-control form-control-color">
    </div>
    <div class="d-flex gap-2">
        <button id="save-comment-edit" class="btn btn-sm btn-success w-50">Сохранить</button>
        <button id="cancel-comment-edit" class="btn btn-sm btn-secondary w-50">Отмена</button>
    </div>
</div>

</body>
</html>